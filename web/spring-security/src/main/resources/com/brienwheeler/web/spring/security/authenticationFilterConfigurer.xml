<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        ">

	<bean id="com.brienwheeler.web.spring.security.authenticationFilterConfigurer.PropertyPlaceholderConfigurer"
			class="com.brienwheeler.lib.spring.beans.PropertyPlaceholderConfigurer">
		<property name="placeholderOrder" value="LIBRARY"/>
		<property name="locations">
			<list>
				<value>classpath:com/brienwheeler/web/spring/security/authenticationFilterConfigurer.properties</value>
			</list>
		</property>
	</bean>

	<bean id="com.brienwheeler.web.spring.security.authenticationFilterConfigurer"
			class="com.brienwheeler.web.spring.security.AuthenticationFilterConfigurer">
		<property name="postOnly" value="${com.brienwheeler.web.spring.security.formLogin.postOnly}"/>
		<property name="usernameParameter" value="${com.brienwheeler.web.spring.security.formLogin.usernameParameter}"/>
		<property name="passwordParameter" value="${com.brienwheeler.web.spring.security.formLogin.passwordParameter}"/>
	</bean>

</beans>
